
@model Register

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div>
        @section Title{
            @await Html.PartialAsync("_TitlePartialView")
        }
    </div>
    <div>
        @section Login{
            @await Html.PartialAsync("_LoginPartialView", new Login())
        }
    </div>
    @*missing:need to check how to display red asterik instead of error massege,for each field*@
    <div class="content">
        <form  asp-action="Register" asp-controller="Register" method="post">
            <div>
                <div>
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" />@* class="form-control"**@
                    @*<div class="invalid-tooltip"></div>*@

                </div>

                <div>
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" />
                  
                </div>
                <div>
                    <label asp-for="Username"></label>
                    <input asp-for="Username" />
              
                </div>
                <div>
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" />
                 
                </div>
                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                 
                </div>
                <div>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                 
                </div>
                <div>
                    <label asp-for="PasswordConfirm"></label>
                    <input asp-for="PasswordConfirm" />
         
                </div>
            </div>

            <input type="submit" value="Register new user" />
            <div asp-validation-summary="All">


            </div>
        </form>
    </div>
</body>
</html>

