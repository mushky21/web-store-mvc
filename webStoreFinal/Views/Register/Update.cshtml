

@model Register

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdatingDetails</title>
</head>
<body>
    @section Title{
        @await Html.PartialAsync("_TitlePartialView")
    }
        <div>
            @section Login{
                @await Html.PartialAsync("_LoginPartialView", new Login())
            }
        </div>
        @*missing:need to check how to display red asterik instead of error massege,for each field*@
        <div class="content">
            <form asp-action="UpdatingDetails" asp-controller="Register" method="put">
                <div>
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div>
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
                <div>
                    <label asp-for="Username"></label>
                    <input disabled asp-for="Username" />
                </div>
                <div>
                    <label asp-for="BirthDate"></label>
                    <input type="text" disabled placeholder="@Model.BirthDate" />

                </div>

                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <input type="submit" value="Update" />
                <div asp-validation-summary="All">
            </div>
            </form>
            <form asp-action="UpdateNewPassword" asp-controller="Register">
                <button class="btn btn-danger btn-sm">New password</button>
            </form>
        </div>

</body>
</html>
