@model List<webStoreFinal.Models.Product>
@{
    ViewData["Title"] = "Index";
}
<br />

<hr />
<p>

    @section Title{
        @await Html.PartialAsync("_TitlePartialView");
    }
    <div>

        @section Login{
            @await Html.PartialAsync("_LoginPartialView", new Login());
        }
    </div>
    <div>
        your messages here:
    </div>
    <div class="ErrorMessages">
        @ViewBag.ErrorMessage
        <div>@ViewBag.LoginError</div>
    </div>

    <div class="buttons">
        <a asp-controller="Home" asp-action="OrderByDate">order by date</a>
        <a asp-controller="Home" asp-action="OrderByTitle">order by Title</a>
    </div>

</p>
<div>
    @foreach (var item in Model)
    {
        <div>
            @await Html.PartialAsync("_AdvertisePartialView", item)
        </div>
    }
</div>
