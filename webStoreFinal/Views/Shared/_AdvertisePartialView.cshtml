@model Product
@inject IReadImage ReadImage


<head>
</head>
<body>
    <div  class="border border-primary col-sm-3 col-lg-3 col-md-3">
        <div class="thumbnail">
            <h3 class="pull-right">@Model.Title</h3>
            @if (Model.Photo1 == null)
            {
                <img src="~/DefaultImage.png" class="defaultImage" />
            }
            else
            {
                <img src="@ReadImage.ByteToImage(Model.Photo1)" class="img-thumbnail" />
            }

        </div>
        <div class="caption">
           
            <h3 class="pull-right">@Model.Price</h3>
            <h3 class="pull-right">@Model.ShortDescription</h3>

            <div>
                @Model.PublishedDate
            </div>

        </div>
        <a asp-action="AddToCart" asp-controller="Home" asp-route-id=@Model.ProductKey asp-route-state=@Model.ProductState>
            <input type="button" value="Add To Cart" />
        </a>
        <a asp-action="ShowDetails" asp-controller="Home" asp-route-id="@Model.ProductKey">
            <input type="button" value="Show Details" />
        </a>
    </div>
 


 


</body>
